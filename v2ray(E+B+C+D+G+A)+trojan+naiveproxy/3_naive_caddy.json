{
  "admin": {
    "disabled": true
  },
  "logging": {
    "logs": {
      "default": {
        "level": "ERROR",
        "writer": {
          "output": "file",
          "filename": "/var/log/caddy/access.log"
        }
      }
    }
  },
  "apps": {
    "layer4": { //加了caddy-l4插件编译的才可启用SNI分流
      "servers": {
        "sni": {
          "listen": [":443"], //443监听端口
          "routes": [{
            "match": [{
              "tls": {
                "sni": ["zv.xx.yy"] //更改为自己规划对应vless+tcp+tls的域名
              }
            }],
            "handle": [{
              "handler": "proxy",
              "proxy_protocol": "v2", //启用PROXY protocol发送。v1或v2表示PROXY protocol版本，建议采用v2版。""中为空或无（删除）此条参数，表示不启用PROXY protocol发送。
              "upstreams": [{
                "dial": ["unix//dev/shm/vless.sock"] //转给vless+tcp+tls监听进程
              }]
            }]
          },
          {
            "match": [{
              "tls": {
                "sni": ["zt.xx.yy"] //更改为自己规划对应trojan-go\trojan的域名
              }
            }],
            "handle": [{
              "handler": "proxy",
              "upstreams": [{
                "dial": ["127.0.0.1:6443"] //转给trojan-go\trojan本地监听端口
              }]
            }]
          },
          {
            "match": [{
              "tls": {
                "sni": ["zh.xx.yy"] //更改为自己规划对应https server的域名
              }
            }],
            "handle": [{
              "handler": "proxy",
              "proxy_protocol": "v2", //启用PROXY protocol发送。v1或v2表示PROXY protocol版本，建议采用v2版。""中为空或无（删除）此条参数，表示不启用PROXY protocol发送。
              "upstreams": [{
                "dial": ["unix//dev/shm/https.sock"] //转给https server监听进程
              }]
            }]
          }]
        }
      }
    },
    "http": {
      "servers": {
        "h1": {
          "listen": [":80"], //http默认监听端口
          "routes": [{
            "handle": [{
              "handler": "static_response",
              "status_code": 301, 
              "headers": {
                "Location": ["https://{http.request.host}{http.request.uri}"] //http自动跳转https,让网站看起来更真实。
              }
            }]
          }]
        },
        "h1h2c": {
          "listen": ["127.0.0.1:88"], //本机端口监听，避免除本机外的机器探测及非安全web访问，仅接收web回落。
          "routes": [{
            "match": [{
              "host": ["zv.xx.yy","zt.xx.yy"] //限定域名访问（禁止以ip方式访问网站），更改为自己的对应域名。
            }],
            "handle": [{
              "handler": "headers",
              "response": {
                "set": {
                  "Strict-Transport-Security": ["max-age=31536000; includeSubDomains; preload"] //启用HSTS
                }
              }
            },
            {
              "handler": "file_server",
              "root": "/var/www/html" //更改为自己存放的web文件路径
            }]
          }],
          "automatic_https": {
            "disable": true //禁用自动https
          },
          "allow_h2c": true //开启h2c server支持
        },
        "https": {
          "listen": ["unix//dev/shm/https.sock"], //https server监听进程，为naiveproxy、h2c proxy等应用服务。
          "listener_wrappers": [{
            "wrapper": "proxy_protocol" //开启PROXY protocol接收
          }, 
          {
            "wrapper": "tls"
          }],
          "routes": [{
            "handle": [{
              "handler": "forward_proxy",
              "auth_user_deprecated": "user", //naiveproxy账号，更改为自己的。
              "auth_pass_deprecated": "pass", //naiveproxy密码，更改为自己的。
              "hide_ip": true,
              "hide_via": true,
              "probe_resistance": {}
            }]
          },
          {
            "match": [{
              "path": ["/SeuW56Es"] //与vless+h2c应用中path对应
            }],
            "handle": [{
              "handler": "reverse_proxy",
              "transport": {
                "protocol": "http",
                "versions": ["h2c"]
              },
              "upstreams": [{
                "dial": "127.0.0.1:2005" //转发给本机vless+h2c监听端口
              }]
            }]
          },
          {
            "match": [{
              "path": ["/cdngrpc/*"] //与vless+grpc应用中serviceName对应
            }],
            "handle": [{
              "handler": "reverse_proxy",
              "transport": {
                "protocol": "http",
                "versions": ["h2c"]
              },
              "upstreams": [{
                "dial": "127.0.0.1:2009" //转发给本机vless+grpc监听端口
              }],
              "flush_interval": -1
            }]
          },
          {
            "match": [{
              "host": ["zh.xx.yy"] //限定域名访问（禁止以ip方式访问网站），更改为自己的对应域名。
            }],
            "handle": [{
              "handler": "headers",
              "response": {
                "set": {
                  "Strict-Transport-Security": ["max-age=31536000; includeSubDomains; preload"] //启用HSTS
                }
              }
            },
            {
              "handler": "file_server",
              "root": "/var/www/html" //更改为自己存放的web文件路径
            }]
          }],
          "tls_connection_policies": [{
            "certificate_selection": {
              "any_tag": ["tls01"]
            },
            "cipher_suites": ["TLS_ECDHE_ECDSA_WITH_AES_256_GCM_SHA384","TLS_ECDHE_ECDSA_WITH_AES_128_GCM_SHA256","TLS_ECDHE_ECDSA_WITH_CHACHA20_POLY1305_SHA256"],
            "alpn": ["h2","http/1.1"]
          }],
          "automatic_https": {
            "disable": true //禁用自动https
          },
          "experimental_http3": false //关闭http3 server支持。目前采用caddy SNI分流，不支持UDP；而且目前采用进程监听（server进程）也无法启动。
        }
      }
    },
    "tls": {
      "certificates": {
        "load_files": [{
          "certificate": "/home/tls/certificates/acme-v02.api.letsencrypt.org-directory/zh.xx.yy/zh.xx.yy.crt", //换成你的证书，绝对路径。
          "key": "/home/tls/certificates/acme-v02.api.letsencrypt.org-directory/zh.xx.yy/zh.xx.yy.key", //换成你的密钥，绝对路径。
          "tags": ["tls01"]
        }]
      }
    }
  }
}
